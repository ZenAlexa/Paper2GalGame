{
  "name": "paper2galgame",
  "version": "1.0.0",
  "description": "Transform academic papers into visual novel experience",
  "repository": "https://github.com/AdrianWang/Paper2GalGame.git",
  "author": "Adrian Wang <https://x.com/Adrian_Z_Wang>",
  "scripts": {
    "build": "yarn parser:build && yarn webgal:build",
    "build-ci": "yarn parser:build-ci && yarn webgal:build",
    "dev": "yarn ext:build && yarn api:build && concurrently \"yarn api:dev\" \"yarn webgal:dev\"",
    "dev:frontend": "yarn parser:build && yarn webgal:dev",
    "webgal:dev": "cd packages/webgal && yarn dev",
    "webgal:build": "cd packages/webgal && yarn build",
    "api:dev": "cd extensions/api && yarn dev",
    "api:build": "cd extensions/api && yarn build",
    "ext:build": "yarn workspace @paper2galgame/paper-parser build && yarn workspace @paper2galgame/script-generator build && yarn workspace @paper2galgame/tts-service build",
    "parser:test": "cd packages/parser && yarn test",
    "parser:test-coverage": "cd packages/parser && yarn coverage",
    "parser:build": "cd packages/parser && yarn build",
    "parser:build-ci": "cd packages/parser && yarn build-ci",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "yarn typecheck:webgal && yarn typecheck:parser && yarn typecheck:api && yarn typecheck:extensions",
    "typecheck:webgal": "tsc -p packages/webgal/tsconfig.json --noEmit",
    "typecheck:parser": "tsc -p packages/parser/tsconfig.json --noEmit",
    "typecheck:api": "tsc -p extensions/api/tsconfig.json --noEmit",
    "typecheck:extensions": "tsc -p extensions/script-generator/tsconfig.json --noEmit && tsc -p extensions/tts-service/tsconfig.json --noEmit && tsc -p extensions/paper-parser/tsconfig.json --noEmit",
    "quality": "yarn check && yarn typecheck"
  },
  "license": "MPL-2.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "extensions/*"
    ]
  },
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "resolutions": {
    "@types/react": "^17.0.80",
    "@types/react-dom": "^17.0.25"
  }
}
